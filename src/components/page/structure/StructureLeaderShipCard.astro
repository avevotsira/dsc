---
import TextElement from "@/components/TextElement";

import { type SupportedLanguage } from "@/i18n/ui";
import { useTranslations } from "@/i18n/utils";
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

const lang = Astro.currentLocale as SupportedLanguage;
const t = useTranslations(lang);

interface Props {
  title: string;
  image: ImageMetadata;
  name: string;
}

const { title, image, name } = Astro.props as Props;
---

<figure class="grid place-items-center gap-y-5">
  <div
    class="relative size-52 overflow-hidden rounded-full border-[5px] border-white drop-shadow-lg dark:border-gray-300"
  >
    <Image src={image} alt="" class="size-full object-cover" />
  </div>
  <figcaption class="text-center text-lg md:text-xl">
    {title}<span class="ml-3 font-bold">{name}</span>
    <TextElement className="text-center" variant="title"
      >{t("MinisterofPostandTelecommunications")}</TextElement
    >
  </figcaption>
</figure>
